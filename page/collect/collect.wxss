/* page/collect/collect.wxss */
.tab-control{
  position: relative;
  top: 0;
  right: 0;
  left: 0;
}

.scroll{
  height: calc(100vh - 90rpx);
}

.collect_goods{
  display: flex;
  height: 220rpx;
  border-bottom: 5rpx solid #e6e6e6;
}

.collect_goods .collect_img{
  width: 35%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.collect_goods .collect_img .img{
  width: 70%;
}

.collect_goods .collect_tit_price{
  width: 65%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx 0;
}

.collect_goods .collect_tit_price .collect_price{
  color: var(--themeColor);
}

.collect_tit_price .collect_title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}