/* page/feedback/feedback.wxss */
.fb_content{
  background-color: #e6e6e6;
  height: calc(100vh - 90rpx);
  padding: 20rpx;
  font-size: 26rpx;
}

.fb_content .fb_tips{
  display: flex;
  flex-wrap: wrap;
}

.fb_content .fb_tips .tips{
  width: 30%;
  height: 60rpx;
  background-color: #fff;
  margin: 10rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 5rpx;
}

.fb_content .fb_desc{
  width: 100%;
  height: 525rpx;
  background-color: #fff;
  margin-top: 12rpx;
}

.fb_content .fb_desc .text{
  height: 290rpx;
  padding: 20rpx 20rpx 35rpx 20rpx;
  width: 95%;
}

.addImage{
  position: relative;
}

.upImage{
  width: 80%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-left: 150rpx;
}

.upImage .item_image:not(:nth-of-type(1)){
  margin-left: 25rpx;
}

.addImage .btn{
  position: absolute;
  width: 90rpx;
  height: 90rpx;
  text-align: center;
  font-size: 50rpx;
  margin: 0;
  padding: 0;
  line-height: 90rpx;
  background-color: #e6e6e6;
  color: gray;
  bottom: 90RPX;
  left: 25rpx;
}

.submit{
  position: relative;
}

.submit .btn{
  position: absolute;
  margin: 0;
  right: 0;
  width: 220rpx;
  background-color: #eb4450;
  color: #fff;
  font-weight: normal;
  top: 20rpx;
  text-align: center;
}