/* page/pay/childCpns/w-good-item/w-good-item.wxss */
.cart-item{
  height: 200rpx;
}

.cart-item .item{
  display: flex;
  border-bottom: 5rpx solid rgba(241, 241, 241);
}

.cart-item .item .img_logo{
  width: 30%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart-item .item .img_logo .img{
  width: 80%;
}

.cart-item .item .desc_num_price{
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.cart-item .item .desc_num_price .price_num{
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}

.cart-item .item .desc_num_price .price_num .changeNum{
  display: flex;
}

.changeNum .num{
  padding: 0 10rpx;
}

.cart-item .item .desc_num_price .price_num .price{
  color: var(--themeColor);
  font-weight: 700;
}

.cart-item .item .desc_num_price .title{
  padding: 0 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
}