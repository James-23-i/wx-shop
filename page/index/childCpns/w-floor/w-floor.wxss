/* page/index/childCpns/w-floor/w-floor.wxss */
.floor-item{
  margin-top: 10rpx;
  display: grid;
  grid-gap: 10rpx;
  /* 网格区域划分(按名称)，需要配合子项grid-area */
  grid-template-areas:
    "a1 a1 a1"
    "a2 a3 a5"
    "a2 a4 a6";
}

.floor-item .floor-item-title{
  grid-area: a1;
}

.floor-item .nav:nth-of-type(1){
  grid-area: a2;
}

.floor-item .nav:nth-of-type(2){
  grid-area: a3;
}

.floor-item .nav:nth-of-type(3){
  grid-area: a4;
}

.floor-item .nav:nth-of-type(4){
  grid-area: a5;
}

.floor-item .nav:nth-of-type(5){
  grid-area: a6;
}

.img{
  width: 100%;
  height: 100%;
}
