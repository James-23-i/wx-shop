/* page/cart/cart.wxss */
.get_address{
  padding: 20rpx;
}

.show_address{
  display: flex;
  padding: 20rpx;
}

.show_address .name_address{
  flex: 5;
}

.show_address .telNumber{
  flex: 2;
  text-align: right;
}

.textCart{
  height: 80rpx;
  border-top: 5rpx solid var(--themeColor);
  border-bottom: 5rpx solid var(--themeColor);
  font-size: 40rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
}

.scroll{
  height: calc(100vh - 124rpx - 88rpx - 80rpx);
}

.toolbar{
  border-top: 2rpx solid #f7f7f7;
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  font-size: 26rpx;
  align-items: center;
}

.toolbar .checkbox{
  width: 60%;
  margin-left: 10rpx;

}

.toolbar .totalPrice{
  width: 60%;
  text-align: right;
  margin-right: 10rpx;
}

.toolbar .totalPrice .tips{
  font-size: 24rpx;
}

.toolbar .totalPrice .text{
  color: var(--themeColor);
  font-weight: 700;
}

.toolbar .totalNum{
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  background-color: var(--themeColor);
}